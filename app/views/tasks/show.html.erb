<h1>This is your task :</h1>
<p><%= @task.name %></p>
<%= @task.description %>
<%= @task.deadline %>
<%= link_to "Edit a task", edit_task_path(@task) %>
<%= link_to "Show all tasks", tasks_path(@task) %>
<%= link_to "Delete task", task_path(@task),
method: :delete, data: { confirm: 'Are you sure?' } %>
